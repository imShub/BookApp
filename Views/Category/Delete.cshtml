@model Category
@{
    ViewData["Title"] = "Delete";
}


<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr>
        </div>
        @*        <div asp-validation-summary="All"></div>
        *@
    <input asp-for="Id" hidden>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" disabled/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" class="form-control" disabled/>
        <span class="text-danger" asp-validation-for="DisplayOrder"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3"><i class="fa fa-circle-plus"></i>Delete</button>
    <a asp-controller="Category" class="btn btn-secondary mt-3 ml-3" asp-action="Index">Back To List</a>
    </div>
</form>

@section Scripts{
    @{

        <partial name="_ValidationScriptsPartial" />
    }
    }


