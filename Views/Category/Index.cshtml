@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="row p-3">
        <div class="col-md-6">
            <h2>Category List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                <i class="fa fa-circle-plus"></i> Create New Category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width: 100%; text-align: center;">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {

            <tr>
                <td>
                    @obj.Id
                </td>
                <td width="50%">
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-50 btn-group" role="button">
                        <a class="btn btn-primary ms-2" asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id">
                            <i class="fa fa-pen-to-square"></i> Edit
                        </a>
                        <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id">
                            <i class="fa fa-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

